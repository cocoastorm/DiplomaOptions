@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>BCIT Option Selection</h1>
    <p class="lead">This application is for BCIT Students to register their preferred option choices!</p>
</div>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <h1>@ViewBag.Message</h1>
            </div>
        }
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Student"))
            {
                @Html.ActionLink("Choices", "Create", "Choices")
                <p>
                    Feel free to click the link above to start selecting your options!
                </p>
            }
        }
    </div>
</div>